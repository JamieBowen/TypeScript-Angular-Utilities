{
  "name": "typescript-angular-utilities",
  "version": "3.0.3",
  "description": "Typescript utility classes published as angular services",
  "author": "Renovo Development Team",
  "main": "source/main.js",
  "typings": "source/main.d.ts",
  "keywords": [
    "typescript",
    "utilities"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RenovoSolutions/TypeScript-Angular-Utilities"
  },
  "scripts": {
    "clean": "gulp clean",
    "build": "gulp clean && tsc && echo Build complete",
    "build.watch": "tsc -w",

    "test": "karma start",
    "test.debug": "karma start karma.debug.conf.js",
    "test.tc": "karma start karma.tc.conf.js",
    "test.full": "karma start karma.full.conf.js",

    "bundle": "gulp bundle",
    "bundle.watch": "gulp bundle.watch",

    "install-build": "npm install && npm run build",
    "install-build-test": "npm install && npm run build && npm run test",
    "build-bundle": "npm run build && npm run bundle",
    "build-bundle.watch": "concurrently --kill-others \"npm run build.watch\" \"npm run bundle.watch\"",
    "build-test": "npm run build && npm run test",
    "build-test.watch": "concurrently --kill-others \"npm run build.watch\" \"npm run test.debug\"",

    "full-build": "npm install && npm run build && npm run bundle",

    "all": "npm install && npm run build && npm run test.full && npm run bundle",
    "build-test-bundle": "npm run build && npm run test.full && npm run bundle",

    "postinstall": "typings install"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "concurrently": "~2.0.0",
    "del": "~2.2.0",
    "gulp": "~3.9.1",
    "gulp-utilities": "https://github.com/RenovoSolutions/Gulp-Typescript-Utilities/archive/2.0.5.tar.gz",
    "karma": "~0.13.21",
    "karma-chai": "~0.1.0",
    "karma-chrome-launcher": "~0.2.2",
    "karma-firefox-launcher": "~0.1.7",
    "karma-ie-launcher": "~0.2.0",
    "karma-mocha": "~0.2.2",
    "karma-sinon": "~1.0.4",
    "karma-teamcity-reporter": "~0.2.1",
    "karma-webpack": "~1.7.0",
    "mocha": "~2.4.5",
    "run-sequence": "^1.1.5",
    "sinon": "~1.17.3",
    "systemjs-builder": "^0.15.16",
    "typescript": "~1.8.2",
    "typings": "^1.0.4"
  },
  "dependencies": {
    "angular2-uuid": "^1.0.7",
    "es6-shim": "^0.35.0",
    "json-loader": "~0.5.4",
    "reflect-metadata": "0.1.2",
    "zone.js": "^0.6.12"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0-rc.1",
    "@angular/http": "^2.0.0-rc.1",
    "@angular/upgrade": "^2.0.0-rc.1",
    "angular": "^1.5.3",
    "angular-mocks": "~1.5.0",
    "lodash": "~4.5.1",
    "moment": "~2.11.2",
    "moment-timezone": "~0.5.3",
    "rxjs": "5.0.0-beta.6"
  },
  "license": "MIT"
}
